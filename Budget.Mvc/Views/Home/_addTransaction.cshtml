@model Budget.Mvc.Models.ViewModels.TransactionViewModel
<div id="addCategoryModal" class="modal-content">
    <div id="addCategoryForm">
        <h4>Add Sleep</h4>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Id" type="hidden" class="form-control" />
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
                <button type="button" id="form-button" class="btn btn-success">Add Category</button>
            </div>
        </div>
    </div>
    
    <div id="addCategoryModalSuccess" class="modal-content-success d-none">
        <h4>Category Successfully Added</h4>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
                <button type="button" id="closeCategoryModalBtn" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
</div>
