@model Budget.Mvc.Models.ViewModels.TransactionViewModel
<div class="modal-content">

    <form asp-action="InsertCategory" id="form-action" method="post" class="form-horizontal" role="form">

        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <label asp-for="Category.Name" class="form-label"></label>
                <input asp-for="Category.Id" type="hidden" class="form-control" />
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
                <input type="submit" id="AddCategoryBtn" class="btn btn-success" value="Add Category" />
            </div>
        </div>

    </form>

</div>
